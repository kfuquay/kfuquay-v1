---
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<section class="py-0 md:py-20 flex md:flex-row flex-col px-4 md:px-0 gap-10 md:gap-0">
  <div id="heading-container" class="flex flex-col gap-6 justify-center items-start min-h-[calc(100vh-7rem)] md:w-1/2 md:max-h-fit md:min-h-fit md:h-fit" >
    <h1 class="text-pblack">Hi, my name is Kurt Fuquay</h1>
    <p class="text-6xl font-bold">I am a web developer.</p>
    <p class="text-xl text-pblack">
      Seasoned full-stack developer who loves to make accessible apps with intuitive UI. Experience working across various JavaScript and Python frameworks. Passionate about building scalable, efficient systems and learning new technologies.
    </p>
  </div>

  <div
    class="md:flex md:w-1/2 object-contain items-center justify-center p-10 group self-center md:self-auto"
    id="hero-image"
  >
    <a
      rel="noopener noreferrer"
      href="https://github.com/kfuquay"
      target="_blank"
    >
      <div
        class="border-3 border-black rounded-2xl h-52 w-60 shadow-card group-hover:shadow-hover flex transition relative"
      >
        <div class="h-80 w-60 overflow-hidden relative -mt-30 rounded-2xl">
          <Image
            class="object-bottom absolute bottom-0 group-hover:scale-105 transition"
            src={images["/src/assets/hero.png"]()}
            alt="Kurt wearing sunglasses and a beanie, gazing into the distance with a relaxed expression"
            loading="lazy"
            widths={[300, 600, 900]}
            sizes="(max-width: 900px) 100vw, 900px"
          />
        </div>
      </div>
    </a>
  </div>
</section>
